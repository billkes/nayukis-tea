/* pages/cat/cat.wxss */
/**index.wxss**/
@import "../../style/tailwind.wxss"; 

.container {
  width: 100%;
  min-height: 100vh;
}

/* 导航栏样式 */
.t-navbar-content {
  transition: opacity 0.3s;
}

.t-navbar-content.fixed {
  background: #fff !important;
}

/* 搜索框样式 */
.search-box {
  height: 64rpx;
  background: #f7f7f7;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin: 0 24rpx;
  width: auto;
}

.search-box .t-icon {
  margin-right: 12rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 商品容器样式 */
.product-container {
  width: 100%;
}

.product-image {
  width: 100%;
  height: 750rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 24rpx;
  background: #fff;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.product-price {
  font-size: 36rpx;
  color: #ff4444;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.detail-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

/* 自定义图片样式 */
.custom-image {
  width: 72rpx;
  height: 32rpx;
} 