.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.drink-header {
  margin-bottom: 30rpx;
}

.drink-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.drink-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.note {
  font-size: 26rpx;
  color: #888;
}

.options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.option {
  padding: 12rpx 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.option.active {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4e22;
  margin-right: 20rpx;
}

.selection {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.add-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}