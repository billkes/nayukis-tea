<!--pages/secondPages/address/address.wxml-->

<view class="h-screen bg-gray-100 px-6 py-6 box-border">
  <view wx:for="{{list}}" wx:key="index" wx:for-item="item" class='mb-6 bg-white px-6 py-6 flex justify-between items-center'>
    <view>
      <view class="">{{item.title}}</view>
      <text class="mt-2 text-sm text-gray-400">{{item.sex == '0' ? '女士' : '男士'}} {{item.phone}}</text>
    </view>
    <view>
      <t-icon name="edit-2" class="mr-5 text-green-500" size="32rpx" />
    </view>
  </view>
</view>

<view class="absolute bottom-10 left-10 right-10 bg-green-500 text-white flex justify-center items-center h-16 rounded-50">
  <t-icon name="plus" class="" size="40rpx" />
  <text>新增地址</text>
</view>