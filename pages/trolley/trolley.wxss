@import "../../style/tailwind.wxss"; 
.order-settlement-container {
  padding: 15px;
  background-color: #fff;
}

/* 取餐时间部分样式 */
.pickup-time-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.section-label {
  font-size: 16px;
  color: #333;
}

.section-value {
  font-size: 16px;
  color: #00b300;
}

/* 堂食/打包选项部分样式 */
.dine-takeaway-section {
  display: flex;
  margin-bottom: 15px;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 15px;
}

.radio-label radio {
  transform: scale(0.9);
  margin-right: 5px;
}

/* 杯贴留言部分样式 */
.cup-message-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.message-link {
  font-size: 16px;
  color: #007aff;
}

/* 商品展示部分样式（原样式微调） */
.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  padding: 15px 0;
}

.product-left {
  width: 80px;
  height: 80px;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.product-middle {
  flex: 1;
  margin-left: 15px;
}

.product-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.product-specs {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.product-quantity {
  font-size: 14px;
  color: #666;
}

.product-right {
  width: 80px;
  text-align: right;
}

.product-price-container {
  display: flex;
  justify-content: flex-end;
}

.product-price {
  font-size: 16px;
  color: #333;
}

/* 精选搭配部分样式（原样式微调） */
.recommended-section {
  margin-top: 20px;
}

.recommended-title {
  font-size: 18px;
  color: #333;
  margin-bottom: 10px;
}

.recommended-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.recommended-left {
  width: 120px;
  height: 120px;
}

.recommended-image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.recommended-middle {
  flex: 1;
  margin-left: 15px;
}

.recommended-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.recommended-price {
  display: flex;
  align-items: center;
}

.original-price {
  font-size: 14px;
  color: #999;
  text-decoration: line-through;
  margin-right: 5px;
}

.current-price {
  font-size: 16px;
  color: #ff4500;
}

.recommended-right {
  width: 30px;
  text-align: center;
}

.recommended-radio {
  transform: scale(0.8);
}

/* 储值有礼部分样式 */
.recharge-section {
  display: flex;
  justify-content: space-between;
